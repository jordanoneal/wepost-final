{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "paths": {
      "common.interfaces": ["../common/lib/interfaces"]
    },
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "references": [{ "path": "../common" }]
}
